<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Button
        android:id="@+id/btn_map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onProcess"
        android:text="onMap" />
    
    <Button
        android:id="@+id/btn_market"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onProcess"
        android:text="onMarket" />
    
    <Button
        android:id="@+id/btn_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onProcess"
        android:text="onEmail" />
    
    <Button
        android:id="@+id/btn_email_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onProcess"
        android:text="onEmailImage" />
     <Button
        android:id="@+id/btn_send_multiple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onProcess"
        android:text="onSendImages" />
    

</LinearLayout>